"code": "{{- Coding.code | strip -}}",
{%- capture codeSystemName -%}
  {%- include 'ValueSet/SystemReference' code: Coding.codeSystem -%}
{%- endcapture -%}
{%- assign codeSystemName = codeSystemName | strip -%}
"system": "{{- codeSystemName | prepend_id -}}",
{%- assign display = nil -%}
{%- if codeSystemName contains "loinc" -%}
  {%- assign display = Coding.code | get_loinc_name -%}
{%- elsif codeSystemName contains "snomed" -%}
  {%- assign display = Coding.code | get_snomed_name -%}
{%- elsif codeSystemName contains "rxnorm" -%}
  {%- assign display = Coding.code | get_rxnorm_name -%}
{%- endif -%}
{%- if Coding.displayName and display == nil -%}
  {%- assign display = Coding.displayName | clean_string_from_tabs | strip | escape_special_chars -%}
{%- endif -%}
"display": "{{display}}",