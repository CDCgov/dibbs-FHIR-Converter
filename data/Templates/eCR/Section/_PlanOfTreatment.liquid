{% assign carePlan = msg | get_first_ccda_sections_by_template_id: '2.16.840.1.113883.10.20.22.2.10' -%}
{% assign carePlanResource = carePlan.2_16_840_1_113883_10_20_22_2_10 %}
{% if carePlanResource %}
    {% assign carePlanId = carePlanResource | to_json_string | generate_uuid %}
    {%- include 'Resource/CarePlan' carePlan: carePlanResource ID: carePlanId patientReference: fullPatientId -%}
    {%- assign encounterParticipants = carePlanResource.entry.encounter.participant | to_array -%}
    {%- for participant in encounterParticipants -%}
        {%- if participant.typeCode == "LOC"-%}
            {% assign locationId = participant.participantRole | to_json_string | generate_uuid %}
            {%- include 'Resource/Location' ID: locationId, location: participant.participantRole -%}
            {% assign fullLocationId = locationId | prepend: 'Location/' -%}
            {%- include 'Reference/CarePlan/Location' ID: carePlanId, REF: fullLocationId -%}
        {%- endif -%}
    {%- endfor -%}
    {{ carePlanResource.entry | to_array | batch_render: 'Entry/PlanOfTreatment/entry', 'entry' }}
{% endif %}
